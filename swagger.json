            }
          }
        },
        "delete": {
          "tags": ["Participants"],
          "summary": "Deletes a participant by participant ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "SUCCESS - Participant Deleted"
            },
            "401": {
              "description": "Authentication Error"
            },
            "404": {
              "description": "Participant Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
