            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "ParticipantFirstName"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "ParticipantLastName"
                  },
                  "email": {
                    "type": "email",
                    "example": "participant@email.com"
                  },
                  "event_id": {
                    "type": "string",
                    "example": "EventID"
                  },
                  "joined_at": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-01"
                  },
                  "status": {
                    "type": "string",
                    "example": "Joinend,Pending,Paid,etc."
                  }
                },
                "required": ["first_name", "last_name", "email", "event_id", "joined_at", "status"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "SUCCESS - Participant Created"
            },
            "401": {
              "description": "Authentication Error"
            },
            "412": {
              "description": "Validation Error"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
