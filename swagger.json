{
    "swagger": "2.0",
    "info": {
      "title": "Event Management API",
      "description": "API for managing events and attendees",
      "version": "1.0.0"
    },
    "host": "cse341-finalproject-87ca.onrender.com",
    "basePath": "/",
    "schemes": [
      "https"
    ],
    "paths": {
      "/": {
        "get": {
          "tags": [
            "Hello World"
          ],
          "description": "Returns a welcome message",
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        }
      },
      "/events": {
        "get": {
          "tags": ["Events"],
          "summary": "Gets all events",
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        },
        "post": {
          "tags": ["Events"],
          "summary": "Creates a new event",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Event Name"
                  },
                  "description": {
                    "type": "string",
                    "example": "Event Description"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-01"
                  },
                  "location": {
                    "type": "string",
                    "example": "Event Location"
                  },
                  "created_by": {
                    "type": "string",
                    "example": "Joe Admin"
                  }
                },
                "required": ["title", "description", "location", "date", "created_by"]
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Event Created"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/events/{id}": {
        "get": {
          "tags": ["Events"],
          "summary": "Gets a single event by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "404": {
              "description": "Event Not Found"
            }
          }
        },
        "put": {
          "tags": ["Events"],
          "summary": "Updates an event by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Updated Event Name"
                  },
                  "description": {
                    "type": "string",
                    "example": "Updated Event Description"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-02"
                  },
                  "location": {
                    "type": "string",
                    "example": "Updated Event Location"
                  },
                  "created_by": {
                    "type": "string",
                    "example": "Updated Creator/Editor"
                  }
                },
                "required": ["name", "date", "location", "description", "created_by"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Event Updated"
            },
            "404": {
              "description": "Event Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "delete": {
          "tags": ["Events"],
          "summary": "Deletes an event by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Event Deleted"
            },
            "404": {
              "description": "Event Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      }
    }
  }
  