{
    "swagger": "2.0",
    "info": {
      "title": "Event Management API",
      "description": "This is an API for managing events and attendees.",
      "version": "1.0.0"
    },
    "host": "cse341-finalproject-87ca.onrender.com",
    "basePath": "/",
    "schemes": [
      "https"
    ],
    "paths": {
      "/": {
        "get": {
          "tags": [
            "Home"
          ],
          "description": "Returns the welcome message",
          "responses": {
            "200": {
              "description": "SUCCESS"
            }
          }
        }
      },
      "/events": {
        "get": {
          "tags": ["Events"],
          "summary": "Gets all events",
          "responses": {
            "200": {
              "description": "SUCCESS"
            }
          }
        },
        "post": {
          "tags": ["Events"],
          "summary": "Creates a new event",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "EventName"
                  },
                  "description": {
                    "type": "string",
                    "example": "EventDescription"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-01"
                  },
                  "location": {
                    "type": "string",
                    "example": "EventLocation"
                  },
                  "created_by": {
                    "type": "string",
                    "example": "JoeAdmin"
                  }
                },
                "required": ["title", "description", "date", "location", "created_by"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "SUCCESS - Event Created"
            },
            "401": {
              "description": "Authentication Error"
            },
            "412": {
              "description": "Validation Error"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/events/{id}": {
        "get": {
          "tags": ["Events"],
          "summary": "Gets a single event by event ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "SUCCESS"
            },
            "404": {
              "description": "Event Not Found"
            }
          }
        },
        "put": {
          "tags": ["Events"],
          "summary": "Updates an event by event ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "UpdatedEventName"
                  },
                  "description": {
                    "type": "string",
                    "example": "UpdatedEventDescription"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-02"
                  },
                  "location": {
                    "type": "string",
                    "example": "UpdatedEventLocation"
                  },
                  "created_by": {
                    "type": "string",
                    "example": "UpdatedCreator/Editor"
                  }
                },
                "required": ["title", "description", "date", "location", "created_by"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "SUCCESS - Event Updated"
            },
            "401": {
              "description": "Authentication Error"
            },
            "404": {
              "description": "Event Not Found"
            },
            "412": {
              "description": "Validation Error"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        },
        "delete": {
          "tags": ["Events"],
          "summary": "Deletes an event by event ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "SUCCESS - Event Deleted"
            },
            "401": {
              "description": "Authentication Error"
            },
            "404": {
              "description": "Event Not Found"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      },
      "/participants": {
        "get": {
          "tags": ["Participants"],
